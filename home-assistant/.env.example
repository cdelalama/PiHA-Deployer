# Host identity
HOST_ID=your-host_id

# Runtime user mapping
DOCKER_USER_ID=your-docker_user_id
DOCKER_GROUP_ID=your-docker_group_id

# NAS share (override here if not provided by common/common.env)
NAS_IP=your-nas_ip
NAS_SHARE_NAME=your-nas_share_name
NAS_USERNAME=your-nas_username
NAS_PASSWORD=your-nas_password
NAS_MOUNT_DIR=your-nas_mount_dir

# Paths on NAS (grouped by host)
BASE_DIR=your-base_dir
DOCKER_COMPOSE_DIR=your-docker_compose_dir
HA_DATA_DIR=your-ha_data_dir
PORTAINER_DATA_DIR=your-portainer_data_dir

# Networking / ports
HA_PORT=your-ha_port
PORTAINER_PORT=your-portainer_port
IP=your-ip
TZ=your-tz

# Portainer admin password (written to portainer_password.txt)
PORTAINER_PASS=your-portainer_pass

# NAS SSH access for MariaDB cleanup
NAS_SSH_HOST=your-nas_ssh_host
NAS_SSH_USER=your-nas_ssh_user
NAS_SSH_PORT=your-nas_ssh_port
NAS_SSH_USE_SUDO=your-nas_ssh_use_sudo

# MariaDB recorder (mandatory)
MARIADB_HOST=your-mariadb_host
MARIADB_PORT=your-mariadb_port
MARIADB_DATABASE=your-mariadb_database
MARIADB_USER=your-mariadb_user
MARIADB_PASSWORD=your-mariadb_password
MARIADB_CONTAINER_NAME=your-mariadb_container_name
NAS_DEPLOY_DIR=your-nas_deploy_dir
