# Host identity
HOST_ID=your-host_id

# MariaDB (Optional)
ENABLE_MARIADB_CHECK=your-enable_mariadb_check
MARIADB_CONTAINER_NAME=your-mariadb_container_name
MARIADB_HOST=your-mariadb_host
MARIADB_PORT=your-mariadb_port
MARIADB_DATABASE=your-mariadb_database
MARIADB_USER=your-mariadb_user
MARIADB_PASSWORD=your-mariadb_password

# NAS bootstrap helper (local NAS execution)
NAS_SSH_HOST=your-nas_ssh_host
NAS_SSH_USER=your-nas_ssh_user
NAS_SSH_PORT=your-nas_ssh_port
NAS_SSH_USE_SUDO=your-nas_ssh_use_sudo
NAS_DEPLOY_DIR=your-nas_deploy_dir
MARIADB_DATA_DIR=your-mariadb_data_dir
MARIADB_ROOT_PASSWORD=your-mariadb_root_password
PUBLISHED_PORT=your-published_port

# Paths on NAS (group-by-host)
DOCKER_COMPOSE_DIR=your-docker_compose_dir
HA_DATA_DIR=your-ha_data_dir
BASE_DIR=your-base_dir
PORTAINER_DATA_DIR=your-portainer_data_dir

# Ports
HA_PORT=your-ha_port

# Network
IP=your-ip
# Installer behaviour
HA_ALLOW_EXISTING_DATA=your-ha_allow_existing_data
UNINSTALL_PURGE_LOCAL=your-uninstall_purge_local
UNINSTALL_PURGE_IMAGES=your-uninstall_purge_images
# Storage mode: sqlite_local (uses /var/lib/piha/home-assistant) or nas (uses HA_DATA_DIR on NAS)
HA_STORAGE_MODE=your-ha_storage_mode