# SSH connection to NAS
NAS_SSH_HOST=your-nas-hostname-or-ip
NAS_SSH_USER=your-nas-user
NAS_SSH_PORT=22
NAS_SSH_USE_SUDO=false

# Deployment paths on NAS
NAS_DEPLOY_DIR=/share/Container/compose/mariadb
MARIADB_DATA_DIR=/share/Container/compose/mariadb/data

# MariaDB container settings
MARIADB_CONTAINER_NAME=piha-ha-mariadb
MARIADB_ROOT_PASSWORD=your-root-password
MARIADB_DATABASE=homeassistant
MARIADB_USER=homeassistant
MARIADB_PASSWORD=your-db-password
PUBLISHED_PORT=3306
