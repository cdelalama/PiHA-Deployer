# Base Configuration
# Temporary directory used during installation process
BASE_DIR=your-base_dir

# Docker Configuration
# User and group IDs for container permissions (usually 1000 for first user)
DOCKER_USER_ID=your-docker_user_id
DOCKER_GROUP_ID=your-docker_group_id
# Final installation directory for Docker services
DOCKER_COMPOSE_DIR=your-docker_compose_dir

# Service Directories
# Persistent data directories for each service
PORTAINER_DATA_DIR=your-portainer_data_dir
NODE_RED_DATA_DIR=your-node_red_data_dir
SYNCTHING_CONFIG_DIR=your-syncthing_config_dir

# Service Ports
# Web interface access ports
PORTAINER_PORT=your-portainer_port
NODE_RED_PORT=your-node_red_port

# Network Configuration
# Use 'auto' for automatic IP detection, or set a specific IP (e.g., IP=your-# use 'auto' for automatic ip detection, or set a specific ip (e
IP=your-ip

# NAS Configuration
# Network Attached Storage connection details
NAS_IP=your-nas_ip
NAS_SHARE_NAME=your-nas_share_name
NAS_USERNAME=your-nas_username
NAS_PASSWORD=your-nas_password
NAS_MOUNT_DIR=your-nas_mount_dir
# Sync interval in milliseconds (10000 =your-# sync interval in milliseconds (10000
SYNC_INTERVAL=your-sync_interval

# Samba Configuration
# Windows file sharing credentials
SAMBA_USER=your-samba_user
SAMBA_PASS=your-samba_pass

# Syncthing Configuration
# File synchronization service credentials
SYNCTHING_USER=your-syncthing_user
SYNCTHING_PASS=your-syncthing_pass

# Portainer Configuration
# Container management interface credentials (username is always 'admin')
PORTAINER_PASS=your-portainer_pass